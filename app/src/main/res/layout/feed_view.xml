<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feed_view_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/feed_view_pub_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feed_view_pub_date"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="textEnd"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/feed_view_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:contentDescription="@string/image_content"
        android:scaleType="center"
        app:srcCompat="@drawable/no_photo"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_view_pub_date"/>

    <TextView
        android:id="@+id/feed_view_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/cell_view_title"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_view_image"/>

    <TextView
        android:id="@+id/feed_view_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/feed_view_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_view_title"
        app:layout_constraintBottom_toTopOf="@+id/feed_view_show_btn"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="@string/feed_view_show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feed_view_show_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"/>

</android.support.constraint.ConstraintLayout>